[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
max_line_length = 120

[{go.mod,go.sum,*.go}]
insert_final_newline = true
indent_size = tab
indent_style = tab
tab_width = 4

[Makefile]
max_line_length = off
insert_final_newline = true
indent_size = tab
indent_style = tab
tab_width = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = tab
indent_style = space
tab_width = 2

[.mailmap]
max_line_length = off
